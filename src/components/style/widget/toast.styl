@import "../base/mixin/fn.styl"
.toast-container {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
  display table
  $prefix(transition, opacity .8s);
  opacity: 0;
  &.active {
    opacity: 1;
  }
  .toast-wrapper {
    display table-cell
    vertical-align middle
    text-align center
  }
  .toast-message {
    min-width: 6.825rem;
    max-width: 11.4rem;
    margin auto
    padding: 1.1rem 1.4rem;
    background-color: #353535;
    text-align: center;
    color: #fff;
    border-radius: 0.4rem;
    font-size: .8rem;
  }

  &.top {
    .toast-wrapper {
      vertical-align top
    }
    .toast-message {
      margin-top 50px
    }
  }

  &.bottom {
    .toast-wrapper {
      vertical-align bottom
    }
    .toast-message {
      margin-bottom 50px
    }
  }
}
